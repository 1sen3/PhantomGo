<!-- MainWindow.xaml -->
<Window
    x:Class="PhantomGo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:models="using:PhantomGo.Models"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop/>
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TitleBar Title="PhantomGo"
                  IsBackButtonVisible="False"
                  IsPaneToggleButtonVisible="False"
                  Grid.Row="0"
                  Height="48">
            <TitleBar.IconSource>
                <ImageIconSource x:Name="AppIcon"
                                 ImageSource="/Assets/Square44x44Logo.altform-unplated_targetsize-256.png"/>
            </TitleBar.IconSource>
        </TitleBar>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="26 0 26 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <controls:Segmented x:Name="BoardSegmented"
                                        SelectionChanged="BoardSegmented_SelectionChanged"
                                        Grid.Column="0">
                        <controls:SegmentedItem Content="黑方棋盘"
                                            Icon="{ui:FontIcon Glyph=&#xEA3B;}"
                                            x:Name="BlackSegment"/>
                        <controls:SegmentedItem Content="裁判棋盘"
                                            Icon="{ui:FontIcon Glyph=&#xE80A;}"
                                            x:Name="RefereeSegment"/>
                        <controls:SegmentedItem Content="白方棋盘"
                                            Icon="{ui:FontIcon Glyph=&#xEA3A;}"
                                            x:Name="WhiteSegment"/>
                    </controls:Segmented>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="10">
                        <Button x:Name="PassButton" 
                                Content="虚着" 
                                Click="PassButton_Click"/>

                        <Button x:Name="UndoButton" 
                                Content="悔棋" 
                                Click="UndoButton_Click"/>

                        <Button x:Name="NewGameButton" 
                                Content="重置"
                                Click="NewGameButton_Click" 
                                Style="{ThemeResource AccentButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <Viewbox Margin="20"
                         Grid.Row="1">
                    <Border x:Name="GameBoardCard"
                        Width="800" Height="800"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Padding="40">
                        <Border.Shadow>
                            <ThemeShadow/>
                        </Border.Shadow>

                        <canvas:CanvasControl x:Name="GameBoardCanvas"
                                          Draw="GameBoardCanvas_Draw"
                                          PointerPressed="GameBoardCanvas_PointerPressed"
                                          PointerMoved="GameBoardCanvas_PointerMoved"
                                          PointerExited="GameBoardCanvas_PointerExited"/>
                    </Border>
                </Viewbox>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <controls:Segmented Grid.Row="0" HorizontalAlignment="Center" 
                                    x:Name="StatusSegmented"
                                    SelectionChanged="StatusSegmented_SelectionChanged">
                    <controls:SegmentedItem Content="棋局状态" 
                                            Icon="{ui:FontIcon Glyph=&#xF0E3;}"
                                            x:Name="GameStatusSegment"/>
                    <controls:SegmentedItem Content="历史记录" 
                                            Icon="{ui:FontIcon Glyph=&#xE81C;}"
                                            x:Name="HistorySegment"/>
                </controls:Segmented>

                <!-- 棋局状态 -->
                <Border Grid.Row="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Margin="20"
                        Width="300"
                        VerticalAlignment="Stretch"
                        Visibility="Visible"
                        x:Name="GameStatusCard">
                    <StackPanel  
                        Margin="24" 
                        Spacing="12">

                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,5,0,0"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="⚫" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind GameInfo.BlackTeamName}" FontWeight="SemiBold"/>
                            <TextBlock Text="|" FontWeight="SemiBold" Foreground="{ThemeResource CardStrokeColorDefaultBrush}"/>
                            <TextBlock Text="{x:Bind GameInfo.WhiteTeamName}" FontWeight="SemiBold"/>
                            <TextBlock Text="⚪" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Border Height="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0 5 0 5 "/>

                        <StackPanel Orientation="Horizontal" Spacing="0" Margin="0,5,0,0"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="比赛" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="进行中" FontWeight="Bold" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,5,0,0">
                            <TextBlock Text="现在轮到" FontWeight="SemiBold"/>
                            <TextBlock x:Name="CurrentPlayerText" Text="..."/>
                            <TextBlock Text="落子，" FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,5,0,0">
                            <TextBlock Text="已用时" FontWeight="SemiBold"/>
                            <TextBlock x:Name="ThinkingTime" Text="0" FontWeight="SemiBold"/>
                            <TextBlock Text="秒。" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Border Height="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" Margin="0 15 0 0"/>

                        <!-- 提子数 -->
                        <StackPanel Orientation="Vertical" Spacing="12" Margin="0,15,0,0">
                            <TextBlock Text="提子数" FontSize="16" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{x:Bind _gameLogicService.BlackTeamName}" FontWeight="SemiBold"/>
                                <TextBlock Text=":"/>
                                <TextBlock x:Name="BlackCapturesText" Text="0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{x:Bind _gameLogicService.WhiteTeamName}" FontWeight="SemiBold"/>
                                <TextBlock Text=":"/>
                                <TextBlock x:Name="WhiteCapturesText" Text="0"/>
                            </StackPanel>
                        </StackPanel>
                       
                        <!-- 得分 -->
                        <StackPanel Orientation="Vertical" Spacing="12" Margin="0,15,0,0">
                            <TextBlock Text="得分" FontSize="16" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{x:Bind _gameLogicService.BlackTeamName}" FontWeight="SemiBold"/>
                                <TextBlock Text=":"/>
                                <TextBlock x:Name="BlackScore" Text="0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{x:Bind _gameLogicService.WhiteTeamName}" FontWeight="SemiBold"/>
                                <TextBlock Text=":"/>
                                <TextBlock x:Name="WhiteScore" Text="0"/>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!-- 历史记录 -->
                <Border Grid.Row="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Margin="20"
                        Width="300"
                        VerticalAlignment="Stretch"
                        Visibility="Collapsed"
                        x:Name="HistoryCard">
                    <ListView Padding="10"
                              ItemsSource="{x:Bind MoveHistory}"
                              x:Name="HistoryListView">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Move">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="{x:Bind Id}" Margin="0,0,5,0" Foreground="DarkGray"/>
                                    <TextBlock Text="{x:Bind player}"/>
                                    <TextBlock Text="{x:Bind message}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
