<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PhantomGo.StartWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhantomGo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="StartWindow">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="30">
            <StackPanel Orientation="Horizontal" Spacing="24" HorizontalAlignment="Center">
                <Image Source="/Assets/StoreLogo.png" Width="64" Height="64"/>
                <TextBlock Text="PhantomGo" VerticalAlignment="Center"
                           FontSize="24" FontWeight="SemiBold"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal"
                        Spacing="48">
                <StackPanel Orientation="Vertical" Spacing="12">
                    <TextBlock Text="黑方" FontWeight="SemiBold"/>
                    <TextBox PlaceholderText="请输入黑方队名"
                             Width="250"
                             x:Name="BlackTeamNameBox"/>
                    <ComboBox Width="250" SelectedIndex="0"
                              x:Name="BlackTeamAgentComboBox">
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Vertical" Spacing="12">
                    <TextBlock Text="白方" FontWeight="SemiBold"/>
                    <TextBox PlaceholderText="请输入白方队名"
                             Width="250"
                             x:Name="WhiteTeamNameBox"/>
                    <ComboBox Width="250" SelectedIndex="0"
                              x:Name="WhiteTeamAgentComboBox">
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <RadioButton Content="练习模式" x:Name="IsPracticeRadio" Checked="IsPracticeRadio_Checked"/>
                <RadioButton Content="比赛模式" x:Name="IsEventRadio" Checked="IsEventRadio_Checked"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="48" x:Name="EventInfoPanel" Visibility="Collapsed">
                <TextBox PlaceholderText="请输入比赛名称" 
                         Width="250"
                         x:Name="EventNameBox"/>
                <TextBox PlaceholderText="请输入比赛地点" Width="250"
                         x:Name="EventLocationBox"/>
            </StackPanel>

            <Button Content="开始"
                    HorizontalAlignment="Center"
                    Width="250"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
